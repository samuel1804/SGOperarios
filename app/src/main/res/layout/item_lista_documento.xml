<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DocumentosActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

<TextView
    android:id="@+id/AdjuntoId"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:visibility="invisible"
    android:text=""/>

        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_pdf"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            />

        <TextView
            android:id="@+id/tvTipoDocumento"
            android:layout_width="160dp"
            android:layout_height="50dp"
android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:text="Acta de Entrega" />

        <TextView
            android:id="@+id/tvTamanio"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="TamaÃ±o: 56kb" />

        <TextView
            android:id="@+id/tvFormato"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:gravity="center"
            android:text="PDF"
            android:visibility="invisible"/>




    </LinearLayout>


</LinearLayout>