<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BuscarSolicitudActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/llFoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_photo"
            android:clickable="true"
            >
            <TextView
                android:id="@+id/ProveedorLocalId"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="invisible"
                android:text=""/>

            <ImageView
                android:id="@+id/ivFoto"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="10dp"
                android:src="@drawable/tomafoto"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:orientation="vertical"
            android:background="@drawable/btn_photo">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <TextView
                  android:id="@+id/tvNombreComercial"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="left"
                  android:text="Ferreteria Total Home"
                  android:layout_marginTop="10dp"
                  android:textStyle="bold"
                  android:textSize="14sp"/>


          </LinearLayout>


          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="RUC: "
                  android:textStyle="bold"/>
              <TextView
                  android:id="@+id/tvRUC"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="10465842581" />


                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Local: "
                      android:layout_marginLeft="20dp"
                      android:textStyle="bold"/>
              <TextView
                  android:id="@+id/tvLocal"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"

                  android:text="Comas" />

<LinearLayout

    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:gravity="right"

    >
              <ImageView
                  android:id="@+id/ivSemaforo"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:src="@drawable/circle_green"
                android:layout_marginRight="20dp"

                  />
</LinearLayout>
      </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Supervisor: "
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tvSupervisor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Samuel Flores Hernandez" />

            </LinearLayout>


        </LinearLayout>







    </LinearLayout>





</LinearLayout>