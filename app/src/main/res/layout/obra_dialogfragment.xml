<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dialog"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/background_dialogtitle"
        android:padding="9dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ico_hatunsol"


            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginleft_dialog"
            android:text="@string/app_name"
            android:textColor="@color/textcolor_dialogtitle"
            android:textSize="@dimen/sizetitle_dialog"
            android:textStyle="bold" />


    </LinearLayout>



    <ImageView
        android:id="@+id/ivFoto"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/camera_preview"
        android:layout_gravity="center"

        />

<TextView
    android:id="@+id/tvDescripcion"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="@color/white"
    android:layout_marginLeft="17dp"
    android:layout_marginRight="17dp"
    android:textStyle="bold"
    android:textSize="14dp"
    android:text="Proyecto de Techo realizad en el Primer Piso de una Casa con bases de material de Concreto."/>
    <TextView
        android:id="@+id/tvMensaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="8dp"
        android:gravity="left"
        android:text="Ingrese los Datos para Presupuestar su Obra:"
        android:textColor="@color/textcolor_dialogtitle"
        android:textSize="12sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Obra:"
            android:textColor="@color/textcolor_dialogtitle"
            android:textSize="@dimen/textsize_dialog"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvObra"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="left"
            android:text="Techo 1er Piso"
            android:textColor="@color/textcolor_dialogtitle"
            android:textSize="@dimen/textsize_dialog" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:gravity="center"

        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"

            android:layout_weight="1"
            android:gravity="left"
            android:text="Área:"
            android:textColor="@color/textcolor_dialogtitle"
            android:textSize="@dimen/textsize_dialog"
            android:textStyle="bold"
            />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4">

            <EditText
                android:id="@+id/etArea"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@drawable/rect_text_edit"
                android:gravity="center"
                android:numeric="decimal"/>

            <TextView
                android:id="@+id/tvUnidadMedida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"

                android:gravity="left"
                android:text="m2"
                android:textColor="@color/textcolor_dialogtitle"
                android:textSize="@dimen/textsize_dialog" />

        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/btAceptar"

        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="18dp"
        android:background="@drawable/btn_blue"
        android:gravity="center"
        android:text="Calcular"
        android:textColor="@color/white"
        android:textStyle="bold"


        />


</LinearLayout>