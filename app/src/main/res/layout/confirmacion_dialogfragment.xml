<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_dialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_dialogtitle"
        android:padding="9dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ico_hatunsol"


            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/textcolor_dialogtitle"
            android:textSize="@dimen/sizetitle_dialog"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/marginleft_dialog" />


    </LinearLayout>

    <TextView
        android:id="@+id/tvMensaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/textcolor_dialogtitle"
        android:text="Hay una Actualizacion Disponible\n Desea Actualizar a una Nueva VersiÃ³n?"
        android:gravity="center"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="8dp"
        android:textSize="@dimen/textsize_dialog" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
        android:id="@+id/tvConfirmacionSI"
        android:layout_width="0dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:background="@color/background_material_light"
        android:text="SI"
        android:layout_marginTop="5dp"
        android:layout_margin="16dp"

        />
    <Button
        android:id="@+id/tvConfirmacionNO"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"

        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:background="@color/background_material_light"
        android:text="NO"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_margin="16dp"

        />
</LinearLayout>
</LinearLayout>