<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BuscarObraActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/llFoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_photo"
            android:clickable="true"
            >
            <TextView
                android:id="@+id/ProveedorLocalId"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="invisible"
                android:text=""/>

            <ImageView
                android:id="@+id/ivFoto"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="10dp"
                android:src="@drawable/tomafoto"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:orientation="vertical"
            android:background="@drawable/btn_photo">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <TextView
                  android:id="@+id/tvDescripcion"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="left"
                  android:text="Techo 1er Piso"
                  android:layout_marginTop="10dp"
                  android:textStyle="bold"
                  android:textSize="16sp"/>


          </LinearLayout>


          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Unidad de Medida: "
                  android:textStyle="bold"/>
              <TextView
                  android:id="@+id/tvUnidadMedida"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Metros Cuadrados" />





<LinearLayout

    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:gravity="right"

    >

</LinearLayout>
      </LinearLayout>




        </LinearLayout>







    </LinearLayout>





</LinearLayout>