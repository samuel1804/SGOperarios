            android:textColor="@color/textcolor_dialogtitle"
            android:text="Ficha RUC"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:textSize="@dimen/textsize_dialog"
            android:textStyle="bold"/>

    </LinearLayout>
    <LinearLayout
