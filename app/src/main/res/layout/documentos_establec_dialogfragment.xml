        android:layout_marginLeft="40sp"
        android:layout_marginTop="8dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_document"
            />
        <TextView
            android:layout_width="wrap_content"
